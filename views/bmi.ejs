<script>
   
    let check = document.getElementById('btn');
    check.addEventListener('click',(e)=>{
        let afterBmi = document.getElementById('afterBmi');
        afterBmi.innerHTML="";
        let h = document.getElementById('height').value;
        let w = document.getElementById('weight').value;
        var c = (w*100*100)/(h*h);
                                                                    // Underweight = <18.5
                                                                    // Normal weight = 18.5–24.9
                                                                    // Overweight = 25–29.9
                                                                    // Obesity = BMI of 30 or greater
        console.log(c);
        let form = document.getElementById('form');
        form.reset();
        c = c.toFixed(1);
        if(h==0||w==0)
        {
            alert('Kindly enter all the values');
            exit();
        }
        e.preventDefault();
        // let afterBmi = document.getElementById('afterBmi');
        if(c<18.5)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>You are Underweight! Your BMI is ${c} </h1><h3>Don't worry HEALTHTRACKER will help you</h3><br>
                                <a class = "btna" href = "underweight.ejs">Check</a>
                               </div> `;
        }
        else if(c>18.5&&c<24.9)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>We are glad to tell you that You are Fit! Your BMI is ${c} </h1><h3>Do you really wanna to be fit always as you are now?</h3><br>
                                <a class = "btna" href = "normal.ejs">Check</a>
                                </div>
                                `;
        }
        else if(c>25&&c<29.9)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>You are OverWeight! Your BMI is ${c} </h1><h3>You need to change your diet.Don't worry, HEALTHTRACKER will help you. </h3><br>
                                <a class = "btna" href = "overweight.ejs">Check</a></div>
                                `;
        }
        else if(c>30&&c<35)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>Hey, You are Obese! Your BMI is ${c}. You really need to change your diet as soon as possible. Don't worry, HEALTHTRACKER will help you. <br>
                                <a class = "btna" href = "obese.ejs">Check</a></div>
                                `;

            }
        else{
            afterBmi.innerHTML=`<div id = "out">Sorry, You have entered some error while inserting data. Re-enter the data correctly</div>
            `;
        }
       

    })
</script>
