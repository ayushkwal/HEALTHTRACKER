</head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<style>
    *{
        background-color:rgb(252, 251, 247)
    }
    #form{
        border:1px solid black;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding:30px 30px;
        margin:40px 230px;
        border-radius: 30px;
        box-shadow: rgba(67, 3, 83,0.6) 6px 6px 30px;
    }
    .mb-3{
        color:purple;
    }
    #bmi{
        color:purple;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }#out{
        color:rgba(51, 3, 53,0.8);
        font-size:14px;
        border:1px solid purple;
        text-align: center;
        padding:30px 30px;
    }
    .btna{
        border:1px solid rgb(49, 2, 49);
        padding:8px 16px;
        border-radius:20px;
        color:purple;
        font-size:18px;
    }
    .btna:hover{
        text-decoration: none;
    }

</style>
<body>
    <blockquote class="blockquote text-center">
        <p class="mb-3" id = "bmi"><h1>BMI-Calculator</h1></p>
        <footer class="blockquote-footer">Powered BY <cite title="Source Title">HEALTHTRACKER</cite></footer>
      </blockquote>
    <form id = "form">
        <div class="form-group  mx-auto">
          <label for="exampleInputEmail1">Enter Your Height(in Cms)</label>
          <input type="number" id = "height" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
           </div>
        <div class="form-group mx-auto">
          <label for="exampleInputPassword1">Enter Your Weight(in Kgs)</label>
          <input type="number"id = "weight" class="form-control" id="exampleInputPassword1">
        </div>

        <button type="submit" class="btn btn-primary mx-auto" id = "btn">Check</button>
      </form>
      <div id = "afterBmi"></div>
    <a href = "/homepage.ejs">HOMEPAGE</a>
</body>
<script>
   
    let check = document.getElementById('btn');
    check.addEventListener('click',(e)=>{
        let afterBmi = document.getElementById('afterBmi');
        afterBmi.innerHTML="";
        let h = document.getElementById('height').value;
        let w = document.getElementById('weight').value;
        var c = (w*100*100)/(h*h);
                                                                    // Underweight = <18.5
                                                                    // Normal weight = 18.5–24.9
                                                                    // Overweight = 25–29.9
                                                                    // Obesity = BMI of 30 or greater
        console.log(c);
        let form = document.getElementById('form');
        form.reset();
        c = c.toFixed(1);
        if(h==0||w==0)
        {
            alert('Kindly enter all the values');
            exit();
        }
        e.preventDefault();
        // let afterBmi = document.getElementById('afterBmi');
        if(c<18.5)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>You are Underweight! Your BMI is ${c} </h1><h3>Don't worry HEALTHTRACKER will help you</h3><br>
                                <a class = "btna" href = "underweight.ejs">Check</a>
                               </div> `;
        }
        else if(c>18.5&&c<24.9)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>We are glad to tell you that You are Fit! Your BMI is ${c} </h1><h3>Do you really wanna to be fit always as you are now?</h3><br>
                                
                                `;
        }
        else if(c>25&&c<29.9)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>You are OverWeight! Your BMI is ${c} </h1><h3>You need to change your diet.Don't worry, HEALTHTRACKER will help you. </h3><br>
                                
                                `;
        }
        else if(c>30&&c<35)
        {
            afterBmi.innerHTML=`<div id = "out"><h1>Hey, You are Obese! Your BMI is ${c}. You really need to change your diet as soon as possible. Don't worry, HEALTHTRACKER will help you. <br>`;
        }
        else{
            afterBmi.innerHTML=`<div id = "out">Sorry, You have entered some error while inserting data</div>`;
        }
       

    })
</script>
